<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="@color/azulito">


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="EJERCICIOS"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/ejercicio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO 1"
                android:textSize="15sp"
                android:backgroundTint="@color/black"
                android:onClick="ejercicio1"
                />

            <Button
                android:id="@+id/ejercicio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO 2"
                android:textSize="15sp"
                android:backgroundTint="@color/black"
                android:onClick="ejercicio2"/>

            <Button
                android:id="@+id/ejercicio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO 3"
                android:textSize="15sp"
                android:backgroundTint="@color/black"
                android:onClick="ejercicio3"
                />
            <Button
                android:id="@+id/ejercicio4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO 4"
                android:textSize="15sp"
                android:backgroundTint="@color/black"
                android:onClick="ejercicio4"
                />
            <Button
                android:id="@+id/ejercicio5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO 5"
                android:textSize="15sp"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/ejercicio6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO 6"
                android:textSize="15sp"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/ejercicio7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO 7"
                android:textSize="15sp"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/ejercicio8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO 8"
                android:textSize="15sp"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/ejercicio9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO 9"
                android:textSize="15sp"
                android:backgroundTint="@color/black"
                />
            <Button
                android:id="@+id/ejercicio10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EJERCICIO 10"
                android:textSize="15sp"
                android:backgroundTint="@color/black"
                />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>